<%= form_with(url: auth_identity_callback_path) do |f| %>
  <div class="text-center text-black"><h1>Login</h1></div>

  <hr>

  <div class="illustration">
    <%= image_pack_tag("logo.jpg", size: "181x116") %>
  </div>

  <hr>

  <div class="mb-3"> 
    <%= f.text_field :auth_key, class: "form-control" %>
    <%= f.label :auth_key, "Username", class: "form-label" %>
  </div>

  <div class="mb-3">
    <%= f.password_field :password, class: "form-control" %>
    <%= f.label :password, "Passwort", class: "form-label" %>
  </div>

  <div class="form-check mb-3">
    <%= f.check_box :remember_me, class: "form-check-input" %>
    <%= f.label :remember_me, "Angemeldet bleiben?", class: "form-check-label" %>
  </div>

  <div class="d-grid">
    <%= f.submit "Login", class: "btn btn-primary" %>
  </div>
<% end %>