<%= form_with(url: @ldap? ldap_login_path : auth_callback_path(provider: "identity")) do |f| %>

  <div class="mb-3"> 
    <%= f.text_field :auth_key, class: "form-control" %>
    <%= f.label :auth_key, "Username", class: "form-label" %>
  </div>

  <div class="mb-3">
    <%= f.password_field :password, class: "form-control" %>
    <%= f.label :password, "Passwort", class: "form-label" %>
  </div>

  <div class="form-check mb-3">
    <%= f.check_box :remember_me, class: "form-check-input" %>
    <%= f.label :remember_me, "Angemeldet bleiben?", class: "form-check-label" %>
  </div>

  <% unless @ldap %>
    Todo: Mobile TOken
  <% end%>

  <div class="d-grid">
    <%= f.submit "Login", class: "btn btn-primary" %>
  </div>
<% end %>